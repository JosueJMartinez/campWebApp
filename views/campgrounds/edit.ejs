<%include ../partials/header %>
	<div class='row justify-content-center'>
		<div class='col-12 mt-4 text-center'>
			<h2>
				Edit <%=campground.title%>
			</h2>
		</div>
		<div class='col-7'>
			<form action='/campgrounds/<%=campground._id%>?_method=PUT' method='POST' enctype='multipart/form-data'>
				<div class='form-group'>
					<label for="title">Title</label>
					<input required class='form-control' type='text' name='campground[title]' id='title' value='<%=campground.title%>'>
				</div>
				<div class='form-group'>
					<label for="price">Price</label>
					<input id='price' class='form-control' type='number' name='campground[price]' value='<%=campground.price%>' min='0.01' step='0.01'>
				</div>
				<div class='form-group'>
					<label for="image">Image</label>
					<input id="image" class='form-control' type='file' name='image' accept='image/*'>
				</div>
				<div class="form-group">
					<label for="location">Location</label>
					<input class="form-control" type="text" name="campground[location]" id="location" value="<%= campground.location %>">
				</div>
				<div class='form-group'>
					<label for="description">Description</label>
					<textarea id="description" rows='5' class='form-control' name='campground[description]'><%=campground.description%></textarea>
				</div>
				<div class='form-group'>
					<button class='btn btn-lg btn-primary btn-block'>
						Submit!
					</button>
				</div>

			</form>
			<a href='/campgrounds/<%=campground._id%>'>Go back</a>
			<form class='float-right' action='/campgrounds/<%=campground._id%>?_method=DELETE' method='POST'>
				<button class='btn btn-sm btn-danger'>Delete</button>
			</form>
		</div>


	</div>

<%include ../partials/footer%>