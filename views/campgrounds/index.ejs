<%include ../partials/header %>



		<header class='jumbotron'>
			<h1>
				Welcome to YelpCamp!
			</h1>
			<p>
				View our camps
			</p>
			<p>
				<a class='btn btn-lg btn-primary' href='campgrounds/new'>Add new campground</a>
			</p>

		</header>
		<div class='row'>
			<div class='col-lg-12'>
				<h3>
					Our Most Popular Camps
				</h3>
			</div>
		</div>
		<div class='row text-center' style='display:flex; flex-wrap: wrap;'>
		<% campgrounds.forEach(camp=>{ %>
			<div class='col-md-3 col-sm-6'>
				<div class='thumbnail'>
					<img src='<%=camp.img%>'>
					<div class='caption'>
						<h4>
							<%=camp.title%>
						</h4>
						<h5><a class='new-link' href='/profiles/<%=camp.author.id%>'><em>Created by: <%= camp.author.username%></em></a></h5>
						<p>
							<a href='/campgrounds/<%=camp._id%>' class='btn btn-primary'>More Info</a>
						</p>
					</div>
				</div>
			
			</div>
			<%})%>
		</div>

	<%include ../partials/footer%>