<%include ../partials/header %>
	<div class='row justify-content-center'>
		<div class='col-12 mt-4 text-center'>
			<h2>
				Create a New Campground
			</h2>
		</div>
		<div class='col-7'>
			<form action='/campgrounds' method='POST' enctype='multipart/form-data'>
				<div class='form-group'>
					<label for="title">Title</label>
					<input required id="title" class='form-control' type='text' name='campground[title]' placeholder='Name of Campground'>
				</div>
				<div class='form-group'>
					<label for="price">Price</label>
					<input required id="price" class='form-control' type='number' name='campground[price]' placeholder='Price' min='0.01' step='0.01'>
				</div>
				<div class='form-group'>
					<label for="image">Image</label>
					<input required id="image" class='form-control' type='file' name='image' accept='image/*'>
				</div>
				<div class="form-group">
					<label for="location">Location</label>
					<input class="form-control" type="text" name="campground[location]" id="location" placeholder="Yosemite National Park, CA">
				</div>
				<div class='form-group'>
					<label for="description">Description</label>
					<textarea id="description" rows='5' class='form-control' name='campground[description]' placeholder='Please describe campground'></textarea>
				</div>
				<div class='form-group'>
					<button required class='btn btn-lg btn-primary btn-block'>
						Submit!
					</button>
				</div>
			</form>
			<a href='/campgrounds'>Go back</a>
		</div>


	</div>

<%include ../partials/footer%>