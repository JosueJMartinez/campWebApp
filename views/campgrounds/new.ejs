<%include ../partials/header %>


		<div class='row'>
			<h1 style='text-align:center'>
				Create a New Campground
			</h1>
			<div style='width:30%; margin:30px auto;'>
				<form action='/campgrounds' method='POST'>
					<div class='form-group'>
						<label for="location">Title</label>
						<input required class='form-control' type='text' name='campground[title]' placeholder='Name of Campground'>

					</div>
					<div class='form-group'>
						<label for="location">Price</label>
						<input required class='form-control' type='number' name='campground[price]' placeholder='Price' min='0.01' step='0.01'>

					</div>
					<div class='form-group'>
						<label for="location">Image URL</label>
						<input required class='form-control' type='text' name='campground[img]' placeholder='image url'>

					</div>
					<div class='form-group'>
						<label for="location">Description</label>
						<input required class='form-control' type='text' name='campground[description]' placeholder='description'>

					</div>
					<div class="form-group">
    					<label for="location">Location</label>
    					<input class="form-control" type="text" name="campground[location]" id="location" placeholder="Yosemite National Park, CA">
					</div>
					<div class='form-group'>
						<button required class='btn btn-lg btn-primary btn-block'>
							Submit!
						</button>
					</div>
					

				</form>
				<a href='/campgrounds'>Go back</a>
			</div>
			

		</div>

<%include ../partials/footer%>