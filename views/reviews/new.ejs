<%include ../partials/header%>
<div class='row justify-content-center'>
	<div class='col-12 mt-4 text-center'>
		<h2>
			Review for
			<%=campground.title%>
		</h2>
	</div>
	<div class='col-7'>

		<form action='/campgrounds/<%=campground._id%>/reviews' method='POST'>
			<div class="form-group">
				<label for="rating" class='mb-0'>Leave a rating:</label>
				<div>
					<div class="starrating risingstar d-flex flex-row-reverse float-left d-block mt-0 mb-1">

						<input type="radio" id="star5" name="review[rating]" value="5" />
						<label for="star5" title="5 star">
							<span class="fas fa-star"></span>
						</label>
						<input type="radio" id="star4" name="review[rating]" value="4" />
						<label for="star4" title="4 star">
							<span class="fas fa-star"></span>
						</label>
						<input type="radio" id="star3" name="review[rating]" value="3" />
						<label for="star3" title="3 star">
							<span class="fas fa-star"></span>
						</label>
						<input type="radio" id="star2" name="review[rating]" value="2" />
						<label for="star2" title="2 star">
							<span class="fas fa-star"></span>
						</label>
						<input type="radio" id="star1" name="review[rating]" value="1" />
						<label for="star1" title="1 star">
							<span class="fas fa-star"></span>
						</label>
					</div>
				</div>
			</div>
			<div class='form-group'>
				<textarea id="comment" rows='5' class='form-control' name='review[text]' placeholder='Add a review'></textarea>
			</div>

			<div class='form-group'>
				<button class='btn btn-lg btn-primary btn-block'>
					Submit!
				</button>
			</div>

		</form>
		<a href='/campgrounds/<%=campground._id%>'>Go back</a>

	</div>
</div>
<%include ../partials/footer%>