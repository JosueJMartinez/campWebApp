<%include ../partials/header%>
	<div class='row justify-content-center'>
		<div class='col-12 mt-4 text-center'>
			<h2>
				Edit Review
			</h2>
		</div>
		<div class='col-5'>
			<div class='float-right'>
				<form action='/campgrounds/<%=campground_id%>/reviews/<%=review._id%>?_method=DELETE' method='POST'>
					<button class='btn btn-sm btn-danger' data-backdrop="static" data-toggle="modal" data-target="#disableDelete">Delete</button>
				</form>	
			</div>
			
			<form action='/campgrounds/<%=campground_id%>/reviews/<%=review._id%>?_method=PUT' method='POST'>
				<div class="form-group">
				<label for="rating" class='mb-0'>Leave a rating:</label>
				<div>
					<div class="starrating risingstar d-flex flex-row-reverse float-left d-block mt-0 mb-1">

						<input type="radio" id="star5" name="review[rating]" value="5" <%=(review.rating === 5) ? 'checked': ''%>/>
						<label for="star5" title="5 star"1>
							<span class="fas fa-star"></span>
						</label>
						<input type="radio" id="star4" name="review[rating]" value="4" <%=(review.rating === 4) ? 'checked': ''%>/>
						<label for="star4" title="4 star">
							<span class="fas fa-star"></span>
						</label>
						<input type="radio" id="star3" name="review[rating]" value="3" <%=(review.rating === 3) ? 'checked': ''%>/>
						<label for="star3" title="3 star">
							<span class="fas fa-star"></span>
						</label>
						<input type="radio" id="star2" name="review[rating]" value="2" <%=(review.rating === 2) ? 'checked': ''%>/>
						<label for="star2" title="2 star">
							<span class="fas fa-star"></span>
						</label>
						<input type="radio" id="star1" name="review[rating]" value="1" <%=(review.rating === 1) ? 'checked': ''%>/>
						<label for="star1" title="1 star">
							<span class="fas fa-star"></span>
						</label>
					</div>
				</div>
			</div>
				<div class='form-group'>
					<textarea id="comment" rows='5' class='form-control' name='review[text]'><%=review.text%></textarea>
				</div>

				<div class='form-group'>
					<button class='btn btn-lg btn-primary btn-block' data-backdrop="static" data-toggle="modal" data-target="#disableSubmit">
						Submit!
					</button>
				</div>

			</form>
			<a href='/campgrounds/<%=campground_id%>'>Go back</a>
			

		</div>
	</div>
<%include ../partials/deleteModal%>
<%include ../partials/submitModal%>
<%include ../partials/footer%>