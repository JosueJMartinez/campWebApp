<%include ../partials/header%>
	<div class='row justify-content-center'>
		<div class='col-12 mt-4 text-center'>
			
			<h2>
				Edit Comment
			</h2>
		</div>
		<div class='col-7'>
			<form class='float-right mb-2' action='/campgrounds/<%=campground_id%>/comments/<%=comment._id%>?_method=DELETE' method='POST'>
				<button class='btn btn-sm btn-danger'>Delete</button>
			</form>	
			<form action='/campgrounds/<%=campground_id%>/comments/<%=comment._id%>?_method=PUT' method='POST'>
				<div class='form-group'>
					<textarea id="comment" rows='5' class='form-control' name='comment[text]'><%=comment.text%></textarea>
				</div>

				<div class='form-group'>
					<button class='btn btn-lg btn-primary btn-block'>
						Submit!
					</button>
				</div>

			</form>
			<a href='/campgrounds'>Go back</a>
			

		</div>
	</div>
<%include ../partials/footer%>