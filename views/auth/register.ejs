<%include ../partials/header%>
	<div class='row justify-content-center'>
		<div class='col-12 mt-4 text-center'>
			<h2>
				Please register a new user
			</h2>
		</div>
		<div class='col-7'>
			<form action='/register' method='POST' enctype='multipart/form-data'>
				<div class='form-group'>
					<label for='username'>Username</label>
					<input required id= 'username' class='form-control' type='text' name='username' placeholder='Username'>
				</div>
				<div class='form-group'>
					<label for='password'>Password</label>
					<input required id='password' class='form-control' type='password' name='password' placeholder='Password'>
				</div>
				<div class='form-group'>
					<label for='rePassword'>Re-type Password</label>
					<input required id='rePassword' class='form-control' type='password' name='rePassword' placeholder='Retype Password'>
				</div><div class='form-group'>
					<label for='email'>Email</label>
					<input required id= 'email' class='form-control' type='email' name='user[email]' placeholder='email'>
				</div>
				<div class='form-group'>
					<label for='first'>First Name</label>
					<input required id='first' class='form-control' type='text' name='user[firstName]' placeholder='First Name'>
				</div>
				<div class='form-group'>
					<label for='last'>Last Name</label>
					<input required id='last' class='form-control' type='text' name='user[lastName]' placeholder='Last Name'>
				</div>
				<div class='form-group'>
					<label for='avatar'>Avatar</label>
					<input id='avatar' class='form-control' type='file' name='avatar' accept='image/*'>
				</div>
				<div class='form-group'>
					<label for='admin'>Please enter admin code</label>
					<input id='admin' class='form-control' type='text' name='adminCode' placeholder='Please enter code'>
				</div>
				<div class='form-group'>
					<button class='btn btn-lg btn-primary btn-block' data-backdrop="static" data-toggle="modal" data-target="#disableSubmit">
						Submit!
					</button>
				</div>

			</form>
			<a href='/campgrounds'>Go back</a>
		</div>


	</div>
<%include ../partials/submitModal%>
<%include ../partials/footer%>