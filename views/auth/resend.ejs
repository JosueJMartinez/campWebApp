<%include ../partials/header%>
	<div class='row justify-content-center'>
		<div class='col-12 mt-4 text-center'>
			<h2>
				
				Hello <%= data.username %>, please verify email
			</h2>
		</div>
		<div class='col-7'>
			<form action='/resend' method='POST'>
				<div class='form-group'>
					<label for='email'> If <%= data.email%> not correct re-enter new one</label>
					<input id= 'email' class='form-control' type='email' name='email' placeholder='Enter new Email'>
				</div>
				<div class='form-group'>
					<input id= 'id' class='form-control' type='tex' name='user_id' value='<%= data.userId %>' required hidden>
				</div>
				<div class='form-group'>
					<button class='btn btn-lg btn-primary btn-block' data-backdrop="static" data-toggle="modal" data-target="#disable">
						Re-verify
					</button>
				</div>

			</form>
			<a href='/campgrounds'>Go back</a>
		</div>


	</div>
	<div id="disable" class="modal fade" role="dialog" tabindex="-1">
		<div class="modal-dialog text-center" role='document'>
			<!-- Modal content-->
			<div class="modal-content">
				<div class="modal-header mx-auto">
					<h4 class="modal-title">Sending email to verify again</h4>
				</div>
				<div class="modal-body">
					<div class="spinner-border" role="status">
  						<span class="sr-only">Loading...</span>
					</div>
				</div>
			</div>
		</div>
	</div>


<%include ../partials/footer%>